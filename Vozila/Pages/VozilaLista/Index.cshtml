@page
@model Vozila.Pages.VozilaLista.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Popis Vozila</h1>
<br />

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Popis</h2>
    </div>
    <div class="col-3">
        <a asp-page="Unos" class="btn btn-info form-control text-light">Unesi novo vozilo</a>
    </div>

    <div class="col-12">
        <form method="post">
            @if (Model.Vozila.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Vozila.FirstOrDefault().Id"></label>
                        </th>
                        <th>
                            <label asp-for="Vozila.FirstOrDefault().Marka"></label>
                        </th>
                        <th>
                            <label asp-for="Vozila.FirstOrDefault().Model"></label>
                        </th>
                        <th>
                            <label asp-for="Vozila.FirstOrDefault().Tip"></label>
                        </th>
                        <th>
                            <label asp-for="Vozila.FirstOrDefault().Sasija"></label>
                        </th>
                        <th>

                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var redak in Model.Vozila)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => redak.Id)</td>
                            <td>@Html.DisplayFor(m => redak.Marka)</td>
                            <td>@Html.DisplayFor(m => redak.Model)</td>
                            <td>@Html.DisplayFor(m => redak.Tip)</td>
                            <td>@Html.DisplayFor(m => redak.Sasija)</td>
                            <td>
                                <button class="btn btn-danger btn-sm">Briši</button>                                
                            </td>
                            <td>
                                <a class="btn btn-success btn-sm text-light">Izmjeni</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>Nije pronađeno niti jedno vozilo u bazi.</p>
            }
        </form>
    </div>
</div>