@page
@model Vozila.Pages.VozilaLista.IzmjeniModel

<h2 class="text-info">Izmjeni vozilo</h2>

<div class="container border padding-custom">
    <form method="post">

        <input type="hidden" asp-for="Vozilo.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Vozilo.Marka"></label>
            </div>
            <div class="col-6">
                <input asp-for="Vozilo.Marka" class="form-control" />
            </div>
            <span asp-validation-for="Vozilo.Marka" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Vozilo.Model"></label>
            </div>
            <div class="col-6">
                <input asp-for="Vozilo.Model" class="form-control" />
            </div>
        </div><div class="form-group row">
            <div class="col-4">
                <label asp-for="Vozilo.Tip"></label>
            </div>
            <div class="col-6">
                <input asp-for="Vozilo.Tip" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Vozilo.Sasija"></label>
            </div>
            <div class="col-6">
                <input asp-for="Vozilo.Sasija" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Spremi" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Natrag</a>
            </div>
        </div>
    </form>
</div>
@section scripts{
    <partial name="_ValidationScriptsPartial" />

}


